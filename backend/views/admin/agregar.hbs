<div class="container" style="margin: 100px auto;">
    <div class="row">
        <div class="col-6 offset-3">
            <h4>Agregar una nueva novedad</h4>
            <form action="/admin/novedades/agregar" method="post" enctype="multipart/form-data">
            <div class="mb-3 row">
                <input type="text" name="titulo" class="form-control" placeholder="Titulo">
            </div>
            <div class="mb-3 row">
                <textarea name="subtitulo" class="from-control" placeholder="Subtitulo" type="text"></textarea>
            </div>
            <div class="mb-3 row">
                <textarea name="cuerpo" placeholder="Cuerpo" class="form-control" type="text"></textarea>
            </div>
            <div class="form-group">
                <label>Imagen: <input type="file" name="imagen" id="imagen"/></label>
            </div>
            <button type="submit" class="btn btn-primary">Guardar</button>
            </form>
            {{#if error}}
                <h5>{{message}}</h5>
            {{/if}}
        </div>
    </div>
</div>